pipeline {
    agent {label 'docker'}

    stages {
        stage('Build') {
            steps {
                checkout scm
                def testImage = docker.build("test-image", "./dockerfiles") 

                 testImage.inside {
                    sh 'make test'
                }
            }
        }
        stage('Test') {
            steps {
            sh 'docker -v'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}